<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarListApp.Maui.Views.CarDetailsPage"
             xmlns:viewModels="clr-namespace:CarListApp.Maui.ViewModels"
             x:DataType="viewModels:CarDetailsViewModel"
             Title="{Binding Car.Brand}">

    <VerticalStackLayout>

        <Label Text="{Binding Car.Year}"
               VerticalOptions="Center"
               HorizontalOptions="Center" FontSize="100"/>

    </VerticalStackLayout>

</ContentPage>
